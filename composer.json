{
    "name": "developing-sonder/omdb",
    "description": "oMDB API Client",
    "keywords": [
        "developing-sonder",
        "omdb",
        "movie database",
        "api client"
    ],
    "homepage": "https://github.com/developing-sonder/omdb",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Matthew Moore",
            "email": "admin@developingsonder.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.1",
        "guzzlehttp/guzzle": "^6.3",
        "illuminate/support": "^5.8",
        "vlucas/phpdotenv": "^3.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "DevelopingSonder\\Omdb\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DevelopingSonder\\Omdb\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
}
